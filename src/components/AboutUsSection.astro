---
import { TeamMember } from './TeamMember';

const teamMembers = [
  { name: 'DevRipley', role: 'CEO & Founder', image: 'images/team/devripley.jpg' },
  { name: 'Stharling Caraballo', role: 'Project Manager & Designer', image: 'images/team/stharling.jpg' },
  { name: 'Marlen Hernandez', role: 'CTO', image: 'images/team/marlenhdz.jpg' },
  { name: 'Reyniel Torres', role: 'Lead Designer', image: 'images/team/reyniel.jpg' },
];
---

<section id="about" class="py-20 bg-gray-900">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center text-white mb-12">Nuestro Equipo</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {teamMembers.map((member) => (
        <TeamMember 
          name={member.name}
          role={member.role}
          image={member.image}
        />
      ))}
    </div>
  </div>
</section>

<script is:inline>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Usamos GSAP para animar los miembros del equipo cuando sean visibles en el scroll
  const teamMembersElements = document.querySelectorAll('.team-member');

  teamMembersElements.forEach((member) => {
    gsap.from(member, {
      opacity: 0,
      y: 50,
      duration: 1,
      ease: 'power3.out',
      scrollTrigger: {
        trigger: member,
        start: 'top 80%',
        toggleActions: 'play none none none',
      },
    });
  });
</script>
